{{#if editing}}
{{input class='edit' value=a.title enter="submitTodo"}}

{{else}}

{{input type="checkbox" checked=a.complete 
class="toggle" }}
<label class="{{if a.complete 'completed'}}"
{{action "editTodo" on="doubleClick"}}>
	{{a.title}}
</label>
<button class="destroy" {{action "deleteTodo"}}></button>

{{/if}}